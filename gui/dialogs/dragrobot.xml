<?xml version="1.0"?>
<!-- version: 2012-06-05 -->

<PropertyList>
  <name>dragrobot_dialog</name>
  <layout>vbox</layout>
  <default-padding>1</default-padding>
  <modal>false</modal>
  <width>500</width>

<!-- headline -->
  <group>
    <layout>hbox</layout>
    <default-padding>1</default-padding>
    <empty>
      <stretch>true</stretch>
    </empty>
    <text>
      <label>Drag Roboter Configuration</label>
      <font>
        <name>times_bold</name>
      </font>
    </text>
    <empty>
      <stretch>true</stretch>
    </empty>
  </group>


    <hrule/>
    <hrule/>



<!-- max. lift height -->
  <group>
    <layout>hbox</layout>
    <text>
      <halign>left</halign>
      <label>max. lift height</label>
    </text>
    <group>
      <layout>hbox</layout>
      <halign>right</halign>
      <text>
        <label>999999</label>
        <live>true</live>
        <format>%0.0f m </format>
        <property>sim/glider/dragger/conf/glob_max_lift_height_m</property>
        <color>
          <red>0.2</red>
          <green>0.9</green>
          <blue>0.2</blue>
        </color>
      </text>
      <empty>
        <stretch>true</stretch>
      </empty>
      <vrule/>
      <group>
        <width>60</width>
        <text>
          <label>100m</label>
        </text>
      </group>
      <slider>
        <name>max_lift_height_m</name>
        <property>sim/glider/dragger/conf/glob_max_lift_height_m</property>
        <min>100.0</min>
        <max>5000.0</max>
        <live>true</live>
        <binding>
          <command>dialog-apply</command>
        </binding>
      </slider>
      <group>
        <width>60</width>
        <text>
          <label>5000m</label>
        </text>
      </group>
    </group>
  </group>
  <hrule/>
  
      <group>
	<layout>hbox</layout>
		
	<text>
		<halign>left</halign>
		<label>dragger model</label>
	</text>
        <list>
          <row>0</row>
          <col>1</col>
          <name>model-select</name>
          <property>/sim/glider/dragger/model</property>
          <editable>false</editable>
          <pref-height>110</pref-height><!--
          <pref-width>280</pref-width>-->
          <halign>fill</halign>
          <value>DR400</value>
          <value>PA28</value>
          <value>Staggerwing</value>
	  <value>Ercoupe</value>
          <binding>
            <command>dialog-apply</command>
            <object-name>model-select</object-name>
          </binding>

        </list>

      </group>
      <hrule/>

<!-- advanced configuration -->
  <group>
    <layout>hbox</layout>
    <empty>
      <pref-height>6</pref-height>
    </empty>
    <button>
      <legend>Advanced Drag Robot Configuration</legend>
      <binding>
	      <command>dialog-show</command>
	      <dialog-name>dragrobot_advanced_dialog</dialog-name>
      </binding>
    </button>
    <empty>
      <pref-height>6</pref-height>
    </empty>
  </group>

  <group>
    <layout>hbox</layout>
    <empty>
      <pref-height>6</pref-height>
    </empty>
    <button>
      <legend>Aerotow Settings</legend>
		<binding>
			<command>dialog-show</command>
			<dialog-name>aerotow_dialog</dialog-name>
		</binding>
    </button>
    <empty>
      <pref-height>6</pref-height>
    </empty>
  </group>


    <hrule/>
    <hrule/>


<!-- bottom line -->
  <group>
    <layout>hbox</layout>
    <button>
      <legend>Reset</legend>
      <binding>
        <command>nasal</command>
        <script>dragrobot.resetRobotAttributes()</script>
      </binding>
      <binding>
        <command>nasal</command>
        <script>dragrobot.resetTowing()</script>
      </binding>
    </button>
    <empty>
      <pref-height>6</pref-height>
    </empty>
    <button>
      <legend>Create</legend>
      <binding>
        <command>nasal</command>
        <script>dragrobot.setupDragRobot()</script>
      </binding>
    </button>
    <empty>
      <pref-height>6</pref-height>
    </empty>
    <button>
      <legend>Remove</legend>
      <binding>
        <command>nasal</command>
        <script>dragrobot.removeDragRobot()</script>
      </binding>
    </button>
    <empty>
      <pref-height>6</pref-height>
    </empty>
    <button>
      <legend>Run</legend>
      <binding>
        <command>nasal</command>
        <script>dragrobot.guiRunDragRobot()</script>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
    <empty>
      <pref-height>6</pref-height>
    </empty>
    <button>
      <legend>Cancel</legend>
      <binding>
        <command>nasal</command>
        <script>dragrobot.guiCancelDragRobot()</script>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>



<!-- nasal code -->
  <nasal>
    <open>
    </open>
    <close>
    </close>
  </nasal>

</PropertyList>
