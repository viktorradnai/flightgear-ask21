<?xml version="1.0"?>
<PropertyList>
    <path>engconsole.ac</path>
    <!--Throttle Handle-->
    <animation>
        <type>slider</type>
        <object-name>throttle</object-name>
        <visible>true</visible>
	<drag-direction>vertical</drag-direction>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/engines/engine/throttle-int</property>
                <factor>0.05</factor>
                <min>0</min>
                <max>1</max>
            </binding>
            <binding>
		    <condition>
			    <property>/controls/ask21/mixture-to-throttle</property>
		    </condition>
                <command>property-adjust</command>
                <property>controls/engines/engine/mixture</property>
                <factor>0.05</factor>
                <min>0</min>
                <max>1</max>
            </binding>
            <binding>
		    <condition>
			    <not>
				<property>/controls/ask21/throttle-to-airbrake</property>
			</not>
		    </condition>
                <command>property-adjust</command>
                <property>controls/engines/engine/throttle</property>
                <factor>0.05</factor>
                <min>0</min>
                <max>1</max>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>thr</tooltip-id>
                <label>Throttle %s%%</label>
                <mapping>percent</mapping>
                <property>controls/engines/engine/throttle-int</property>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>throttle</object-name>
	<property>controls/engines/engine/throttle-int</property>
        <factor>-25</factor>
        <center>
            <x-m>-3.36167</x-m>
            <z-m>0.46121</z-m>
        </center>
        <axis>
            <x>0</x>
	    <y>1</y>
            <z>0</z>
        </axis>
    </animation>
    <!--Propbrake Handle-->
    <animation>
        <type>slider</type>
        <object-name>propbrake</object-name>
        <visible>true</visible>
	<drag-direction>vertical</drag-direction>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/engines/engine/propeller-brake</property>
                <factor>-0.05</factor>
                <min>0</min>
                <max>1</max>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>prb</tooltip-id>
                <label>Propeller Brake %s%%</label>
                <mapping>percent</mapping>
                <property>controls/engines/engine/propeller-brake</property>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>propbrake</object-name>
	<property>controls/engines/engine/propeller-brake</property>
        <factor>20</factor>
        <center>
            <x-m>-3.36167</x-m>
            <z-m>0.46121</z-m>
        </center>
        <axis>
            <x>0</x>
	    <y>1</y>
            <z>0</z>
        </axis>
    </animation>
    
    <!--Engine starter--> 
    <animation>
        <type>pick</type>
        <object-name>starter</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
			<condition>
				<equals>
					<property>sim/multiplay/generic/float[10]</property>
					<value>1</value>
				</equals>
				<property>controls/electric/engine-battery-switch</property>
			</condition>
                <command>property-toggle</command>
                <property>/controls/engines/engine/starter</property>
            </binding>
            <mod-up>
                <binding>
			<condition>
				<equals>
					<property>sim/multiplay/generic/float[10]</property>
					<value>1</value>
				</equals>
				<property>controls/electric/engine-battery-switch</property>
			</condition>
                    <command>property-toggle</command>
			<property>/controls/engines/engine/starter</property>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>str</tooltip-id>
                <label>Starter: %s</label>
                <mapping>on-off</mapping>
                <property>/controls/engines/engine/starter</property>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>starter</object-name>
	<property>/controls/engines/engine/starter</property>
        <factor>-0.003</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0.5</z>
        </axis>
    </animation>
    
    
    <!--Engine electric master switch--> 
    <animation>
        <type>pick</type>
        <object-name>masterswitch</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/controls/electric/engine-battery-switch</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>str</tooltip-id>
                <label>Engine Electric Master: %s</label>
                <mapping>on-off</mapping>
                <property>/controls/electric/engine-battery-switch</property>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>masterswitch</object-name>
                <property>/controls/electric/engine-battery-switch-pos</property>
        <factor>-45</factor>
        <axis>
            <x1-m>-3.30563</x1-m>
            <y1-m>-0.00485</y1-m>
            <z1-m>0.48391</z1-m>
            <x2-m>-3.29736</x2-m>
            <y2-m>-0.00485</y2-m>
            <z2-m>0.48766</z2-m>
        </axis>
    </animation>
</PropertyList>
