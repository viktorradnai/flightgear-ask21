<?xml version="1.0"?>

<PropertyList>
	
	<path>ilec.ac</path>
	
	<params>
		<powered type="string">instrumentation/ilec/powered</powered>
		<selftest type="string">instrumentation/ilec/selftest-active</selftest>
		<rpm-flash type="string">instrumentation/ilec/rpm-flashing/state</rpm-flash>
		<mode type="string">instrumentation/ilec/mode</mode>
	</params>
	
	<animation>
		<type>pick</type>
		<object-name>ignitionswitch</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-toggle</command>
				<property>controls/engines/engine/ignition</property>
				<value>3</value>
				<value>0</value>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>str</tooltip-id>
				<label>Ignition: %s</label>
				<mapping>on-off</mapping>
				<property>controls/engines/engine/ignition</property>
			</binding>
		</hovered>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>ignitionswitch</object-name>
		<property>controls/engines/engine/ignition</property>
		<factor>-60</factor>
		<center>
			<x-m>0.00147</x-m>
			<y-m>0.027</y-m>
			<z-m>-0.01747</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>propes</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-toggle</command>
				<property>/controls/engines/engine/extend-propeller</property>
			</binding>   
		</action>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>propes</object-name>
		<property>controls/engines/engine/extend-propeller-pos</property>
		<factor>-60</factor>
		<center>
			<x-m>0.003</x-m>
			<y-m>0.027</y-m>
			<z-m>0.011</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	
	<!--RPM Lights--> 
	<animation>
		<type>material</type>
		<condition>
			<or>
				<and>
					<greater-than>
						<property>/engines/engine/engine-rpm</property>
						<value>3000</value>
					</greater-than>
					<less-than-equals>
						<property>/engines/engine/engine-rpm</property>
						<value>7000</value>
					</less-than-equals>
				</and>
				<property alias="/params/selftest"/>
			</or>
		</condition>
		<object-name>rpm.green</object-name>
		<emission>
			<red>0</red>
			<green>1</green>
			<blue>0</blue>
			<factor-prop alias="/params/powered"/>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<condition>
			<or>
				<and>
					<greater-than>
						<property>/engines/engine/engine-rpm</property>
						<value>7000</value>
					</greater-than>
					<less-than>
						<property>/engines/engine/engine-rpm</property>
						<value>7800</value>
					</less-than>
				</and>
				<property alias="/params/selftest"/>
			</or>
		</condition>
		<object-name>rpm.yellow</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>0</blue>
			<factor-prop alias="/params/powered"/>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<condition>
			<or>
				<greater-than-equals>
					<property>/engines/engine/engine-rpm</property>
					<value>7800</value>
				</greater-than-equals>
				<property alias="/params/selftest"/>
			</or>
		</condition>
		<object-name>rpm.red</object-name>
		<emission>
			<red>1</red>
			<green>0</green>
			<blue>0</blue>
			<factor-prop alias="/params/powered"/>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<condition>
			<property alias="/params/selftest"/>
		</condition>
		<object-name>oilwarn</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>0</blue>
			<factor-prop alias="/params/powered"/>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<condition>
			<property alias="/params/selftest"/>
		</condition>
		<object-name>fuelpresswarn</object-name>
		<emission>
			<red>1</red>
			<green>0</green>
			<blue>0</blue>
			<factor-prop alias="/params/powered"/>
		</emission>
	</animation>
	
	<!--Warning Light (red)-->
	<!--Ignition Off while starting--> 
	<animation>
		<type>material</type>
		<condition>
			<or>
				<and>
					<equals>
						<property>/controls/engines/engine/magnetos</property>
						<value>0</value>
					</equals>
					<property>/controls/engines/engine/starter</property>
				</and>
				<property alias="/params/selftest"/>
			</or>
		</condition>
		<object-name>ignitionoff</object-name>
		<emission>
			<red>1</red>
			<green>0</green>
			<blue>0</blue>
			<factor-prop alias="/params/powered"/>
		</emission>
	</animation>
	<!--Propeller not fully extended-->
	<animation>
		<type>material</type>
		<condition>
			<or>
				<and>
					<greater-than>
						<property>sim/multiplay/generic/float[10]</property>
						<value>0</value>
					</greater-than>
					<less-than>
						<property>sim/multiplay/generic/float[10]</property>
						<value>1</value>
					</less-than>
				</and>
				<property alias="/params/selftest"/>
			</or>
		</condition>
		<object-name>propnfe</object-name>
		<emission>
			<red>1</red>
			<green>0</green>
			<blue>0</blue>
			<factor-prop alias="/params/powered"/>
		</emission>
	</animation>
	<!--ECU fail-->
	<animation>
		<type>material</type>
		<condition>
			<or>
				<greater-than>
					<property>engines/engine/ecu-fail</property>
					<value>0</value>
				</greater-than>
				<property alias="/params/selftest"/>
			</or>
		</condition>
		<object-name>ecu</object-name>
		<emission>
			<red>1</red>
			<green>0</green>
			<blue>0</blue>
			<factor-prop alias="/params/powered"/>
		</emission>
	</animation>
	<!--Generator warning-->
	<animation>
		<type>material</type>
		<condition>
			<or>
				<and>
					<equals>
						<property>sim/multiplay/generic/float[10]</property>
						<value>1</value>
					</equals>
					<or>
						<less-than>
							<property>engines/engine/engine-rpm</property>
							<value>2000</value>
						</less-than>
						<less-than>
							<property>systems/electrical/engine-volts</property>
							<value>12.8</value>
						</less-than>
					</or>
				</and>
				<property alias="/params/selftest"/>
			</or>
		</condition>
		<object-name>genwarn</object-name>
		<emission>
			<red>1</red>
			<green>0</green>
			<blue>0</blue>
			<factor-prop alias="/params/powered"/>
		</emission>
	</animation>
	
	<!--Green: correct state-->
	<!--Propeller fully extended-->
	<animation>
		<type>material</type>
		<condition>
			<or>
				<equals>
					<property>sim/multiplay/generic/float[10]</property>
					<value>1</value>
				</equals>
				<property alias="/params/selftest"/>
			</or>
		</condition>
		<object-name>propfe</object-name>
		<emission>
			<red>0</red>
			<green>1</green>
			<blue>0</blue>
			<factor-prop alias="/params/powered"/>
		</emission>
	</animation>
	<!--Propeller not fully retracted-->
	<animation>
		<type>material</type>
		<condition>
			<or>
				<equals>
					<property>sim/multiplay/generic/float[10]</property>
					<value>0</value>
				</equals>
				<property alias="/params/selftest"/>
			</or>
		</condition>
		<object-name>propfr</object-name>
		<emission>
			<red>0</red>
			<green>1</green>
			<blue>0</blue>
			<factor-prop alias="/params/powered"/>
		</emission>
	</animation>
	
	<!--Engines Hour meter-->
	
	<animation>
		<type>rotate</type>
		<object-name>hours.001</object-name>
		<property>instrumentation/ilec/hours</property>
		<factor>3600</factor>
		<center>
			<x-m>-0.0103</x-m>
			<z-m>-0.01761</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>hours.01</object-name>
		<property>instrumentation/ilec/hours</property>
		<factor>360</factor>
		<center>
			<x-m>-0.0103</x-m>
			<z-m>-0.01761</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>hours.1</object-name>
		<property>instrumentation/ilec/hours</property>
		<factor>36</factor>
		<center>
			<x-m>-0.0103</x-m>
			<z-m>-0.01761</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>hours.10</object-name>
		<property>instrumentation/ilec/hours</property>
		<factor>3.6</factor>
		<center>
			<x-m>-0.0103</x-m>
			<z-m>-0.01761</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>hours.100</object-name>
		<property>instrumentation/ilec/hours</property>
		<factor>0.36</factor>
		<center>
			<x-m>-0.0103</x-m>
			<z-m>-0.01761</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>hours.1000</object-name>
		<property>instrumentation/ilec/hours</property>
		<factor>0.036</factor>
		<center>
			<x-m>-0.0103</x-m>
			<z-m>-0.01761</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>hours.10000</object-name>
		<property>instrumentation/ilec/hours</property>
		<factor>0.0036</factor>
		<center>
			<x-m>-0.0103</x-m>
			<z-m>-0.01761</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<!--	Animate Display	-->
	<animation>
		<type>select</type>
		<object-name>ind.0</object-name>
		<object-name>ind.1</object-name>
		<object-name>ind.2</object-name>
		<object-name>ind.3</object-name>
		<object-name>ind.4</object-name>
		<object-name>ind.5</object-name>
		<object-name>ind.6</object-name>
		<object-name>ind.7</object-name>
		<condition>
			<property alias="/params/powered"/>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>ind.0</object-name>
		<object-name>ind.1</object-name>
		<object-name>ind.2</object-name>
		<object-name>ind.3</object-name>
		<condition>
			<or>
				<not>
					<property alias="/params/rpm-flash"/>
				</not>
				<greater-than-equals>
					<property>engines/engine[0]/rpm-checked</property>
					<value>0</value>
				</greater-than-equals>
			</or>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>ind.4</object-name>
		<object-name>ind.5</object-name>
		<condition>
			<or>
				<greater-than>
					<property alias="/params/mode"/>
					<value>0</value>
				</greater-than>
				<property alias="/params/selftest"/>
			</or>
		</condition>
	</animation>
		
	<animation>
		<type>textranslate</type>
		<object-name>ind.0</object-name>
		<property>instrumentation/ilec/digit[0]</property>
		<axis>
			<y>1</y>
		</axis>
		<factor>0.1</factor>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>ind.1</object-name>
		<property>instrumentation/ilec/digit[1]</property>
		<axis>
			<y>1</y>
		</axis>
		<factor>0.1</factor>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>ind.2</object-name>
		<property>instrumentation/ilec/digit[2]</property>
		<axis>
			<y>1</y>
		</axis>
		<factor>0.1</factor>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>ind.3</object-name>
		<property>instrumentation/ilec/digit[3]</property>
		<axis>
			<y>1</y>
		</axis>
		<factor>0.1</factor>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>ind.4</object-name>
		<property>instrumentation/ilec/digit[4]</property>
		<axis>
			<y>1</y>
		</axis>
		<factor>0.1</factor>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>ind.5</object-name>
		<property>instrumentation/ilec/digit[5]</property>
		<axis>
			<y>1</y>
		</axis>
		<factor>0.1</factor>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>ind.6</object-name>
		<property>instrumentation/ilec/digit[6]</property>
		<axis>
			<y>1</y>
		</axis>
		<factor>0.1</factor>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>ind.7</object-name>
		<property>instrumentation/ilec/digit[7]</property>
		<axis>
			<y>1</y>
		</axis>
		<factor>0.1</factor>
	</animation>
	
</PropertyList>


