<?xml version="1.0"?>
<PropertyList>
    <path>57mm_turnslip.ac</path>
    <animation>
        <type>material</type>
        <object-name>background</object-name>
        <object-name>ball</object-name>
        <object-name>needle</object-name>
        <object-name>tc.scala</object-name>
        <emission>
            <red>0.28</red>
            <green>0.14</green>
            <blue>0.07</blue>
            <factor-prop>sim/model/instruments-light</factor-prop>
        </emission>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>needle</object-name>
        <property>/instrumentation/turn-indicator/indicated-turn-rate</property>
        <condition>
            <and>
                <property>/controls/electric/battery-switch</property>
                <property>/controls/electric/turn-slip-switch</property>
            </and>
        </condition>
        <interpolation>
            <entry>
                <ind>-2.5</ind>
                <dep>-20</dep>
            </entry>
            <entry>
                <ind>2.5</ind>
                <dep>20</dep>
            </entry>
        </interpolation>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m> 0.000</x-m>
            <y-m> 0.000</y-m>
            <z-m>-0.008</z-m>
        </center>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>ball</object-name>
        <property>/instrumentation/slip-skid-ball/indicated-slip-skid</property>
        <factor>5.729</factor>
        <min-deg>-10</min-deg>
        <max-deg> 10</max-deg>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0.000</x-m>
            <y-m>0.000</y-m>
            <z-m>0.082</z-m>
        </center>
    </animation>
</PropertyList>
