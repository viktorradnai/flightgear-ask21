    </animation>
    <!--CANOPY-->
    <animation>
        <type>pick</type>
        <object-name>canopy.frontframe</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>doors.canopyF.toggle();</script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>canopy.frontframe</object-name>
        <object-name>canopy.front2</object-name>
        <property>sim/model/door-positions/canopyF/position-norm</property>
        <interpolation>
            <entry>
                <ind>0.0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>0.2</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-50</dep>
            </entry>
        </interpolation>
        <axis>
            <y>1</y>
        </axis>
        <center>
            <x-m>-3.56113</x-m>
            <z-m>0.82</z-m>
        </center>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>canopy.backframe</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>doors.canopyB.toggle();</script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>canopy.backframe</object-name>
        <object-name>canopy.back2</object-name>
        <property>sim/model/door-positions/canopyB/position-norm</property>
        <interpolation>
            <entry>
                <ind>0.0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>0.2</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>50</dep>
            </entry>
        </interpolation>
        <axis>
            <y>1</y>
        </axis>
        <center>
            <x-m>-1.26909</x-m>
            <z-m>1.11</z-m>
        </center>
    </animation>
