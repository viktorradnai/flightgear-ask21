    <!--FLIGHT CONTROL SURFACES-->
    <animation>
        <type>rotate</type>
        <object-name>aileronL</object-name>
        <property>controls/flight/aileron</property>
        <factor>-24</factor>
        <axis>
            <x1-m>-0.87208</x1-m>
            <y1-m>-5.1648</y1-m>
            <z1-m>1.06231</z1-m>
            <x2-m>-1.19589</x2-m>
            <y2-m>-7.94231</y2-m>
            <z2-m>1.28094</z2-m>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>aileronR</object-name>
        <property>controls/flight/aileron</property>
        <factor>-24</factor>
        <axis>
            <x1-m>-0.87208</x1-m>
            <y1-m>5.1648</y1-m>
            <z1-m>1.06231</z1-m>
            <x2-m>-1.19589</x2-m>
            <y2-m>7.94231</y2-m>
            <z2-m>1.28094</z2-m>
        </axis>
    </animation>
    <!--airbrakes-->
    <animation>
        <type>translate</type>
        <object-name>speedbrakeL</object-name>
        <object-name>speedbrakeR</object-name>
        <property>/surface-positions/speedbrake-pos-norm</property>
        <factor>0.07</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>rudder</object-name>
        <property>controls/flight/rudder</property>
        <factor>24</factor>
        <center>
            <x-m>3.858</x-m>
            <y-m>0.0</y-m>
            <z-m>2.039</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>elevator</object-name>
        <property>controls/flight/elevator</property>
        <factor>24</factor>
        <center>
            <x-m>3.788</x-m>
            <y-m>0.0</y-m>
            <z-m>2.014</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
