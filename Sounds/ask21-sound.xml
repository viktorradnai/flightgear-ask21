				</and>
			</condition>
			<pitch>
				<property>velocities/airspeed-kt</property>
				<factor>0.075</factor>
				<offset>1.0</offset>
			</pitch>
			<volume>
				<property>orientation/pitch-rate-degps</property>
				<factor>0.001</factor>
				<offset>-0.015</offset>
				<max>1</max>
			</volume>
		</whoosh-positive>
		
		<whoosh-negative>
			<name>whoosh-negative</name>
			<mode>looped</mode>
			<path>Aircraft/ASK21/Sounds/whoosh-loop.wav</path>
			<condition>
				<less-than>
					<property>orientation/pitch-rate-degps</property>
					<value>-15</value>
				</less-than>
				<and>
					<greater-than>
						<property>velocities/airspeed-kt</property>
						<value>35</value>
					</greater-than>
				</and>
			</condition>
			<pitch>
				<property>velocities/airspeed-kt</property>
				<factor>0.075</factor>
				<offset>1.0</offset>
			</pitch>
			<volume>
				<property>orientation/pitch-rate-degps</property>
				<factor>-0.001</factor>
				<offset>0.015</offset>
				<max>1</max>
			</volume>
		</whoosh-negative>
		
		<hook_open>
			<name>hook_open</name>
			<mode>once</mode>
			<path>Aircraft/ASK21/Sounds/winch_hook_open.wav</path>
			<condition>
				<property>/sim/hitches/hook-open</property>
			</condition>
