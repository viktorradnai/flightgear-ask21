<?xml version="1.0"?>
<!--from the bocian by AJ MacLeod-->
<PropertyList include="flarm-sound.xml">
	<fx>
		<wheel-spin>
			<name>nose wheel spin</name>
			<mode>looped</mode>
			<path>Aircraft/ASK21/Sounds/wheelspin-loop.wav</path>
			<property>/gear/gear[0]/rollspeed-ms</property>
			<volume>
				<property>/gear/gear[0]/rollspeed-ms</property>
				<factor>0.02</factor>
			</volume>
			<pitch>
				<property>/gear/gear[0]/rollspeed-ms</property>
				<factor>0.01</factor>
				<offset>1</offset>
			</pitch>
			<position>
				<x>-3.2</x>
				<y>0.0</y>
				<z>0.2</z>
			</position>
			<reference-dist>2</reference-dist>
			<max-dist>10</max-dist>
		</wheel-spin>
		
		<wheel-spin>
			<name>main wheel spin</name>
			<mode>looped</mode>
			<path>Aircraft/ASK21/Sounds/wheelspin-loop.wav</path>
			<property>/gear/gear[1]/rollspeed-ms</property>
			<volume>
				<property>/gear/gear[1]/rollspeed-ms</property>
				<factor>0.02</factor>
			</volume>
			<pitch>
				<property>/gear/gear[1]/rollspeed-ms</property>
				<factor>0.006</factor>
				<offset>1</offset>
			</pitch>
			<position>
				<x>-1</x>
				<y>0.0</y>
				<z>0.2</z>
			</position>
			<reference-dist>2</reference-dist>
			<max-dist>10</max-dist>
		</wheel-spin>
		
		<wheel-rumble>
			<name>wheel-rumble-front</name>
			<mode>looped</mode>
			<path>Aircraft/ASK21/Sounds/ground_roll3.wav</path>
			<condition>
				<or>
					<property>/gear/gear[0]/wow</property>
				</or>
			</condition>
			<volume>
				<property>velocities/groundspeed-kt</property>
				<factor>0.05</factor>
			</volume>
			<position>
				<x>-3.2</x>
				<y>0.0</y>
				<z>0.2</z>
			</position>
			<reference-dist>5</reference-dist>
			<max-dist>30</max-dist>
		</wheel-rumble>
		
		<wheel-rumble>
			<name>wheel-rumble-main</name>
			<mode>looped</mode>
			<path>Aircraft/ASK21/Sounds/ground_roll3.wav</path>
			<condition>
				<or>
					<property>/gear/gear[1]/wow</property>
				</or>
			</condition>
			<volume>
				<property>velocities/groundspeed-kt</property>
				<factor>0.05</factor>
			</volume>
			<position>
				<x>-1</x>
				<y>0.0</y>
				<z>0.2</z>
			</position>
			<reference-dist>5</reference-dist>
			<max-dist>30</max-dist>
		</wheel-rumble>
		
		<wheel-rumble>
			<name>wheel-rumble-rear</name>
			<mode>looped</mode>
			<path>Aircraft/ASK21/Sounds/ground_roll3.wav</path>
			<condition>
				<or>
					<property>/gear/gear[2]/wow</property>
				</or>
			</condition>
			<volume>
				<property>velocities/groundspeed-kt</property>
				<factor>0.05</factor>
			</volume>
			<position>
				<x>3.6</x>
				<y>0.0</y>
				<z>0.5</z>
			</position>
			<reference-dist>5</reference-dist>
			<max-dist>30</max-dist>
		</wheel-rumble>
		
		<airbrakes>
			<name>airbrakes</name>
			<mode>looped</mode>
			<path>Aircraft/ASK21/Sounds/airbrakesL.wav</path>
			<property>velocities/airspeed-kt</property>
			<volume>
				<property>/surface-positions/speedbrake-pos-norm</property>
				<factor>0.6</factor>
				<offset>0.0</offset>
				<min>0.0</min>
				<max>0.5</max>
			</volume>
			<volume>
				<property>velocities/airspeed-kt</property>
				<factor>0.015</factor>
				<min>0.00</min>
				<max>0.5</max>
				<offset>-0.1</offset>
			</volume>
			<pitch>
				<property>velocities/airspeed-kt</property>
				<factor>0.002</factor>
				<offset>1</offset>
			</pitch>
		</airbrakes>
		
		<airbrake-open>
			<name>airbrake-unlock</name>
			<mode>once</mode>
			<path>Aircraft/ASK21/Sounds/airbrake-unlock.wav</path>
			<condition>
				<greater-than>
					<property>/surface-positions/speedbrake-pos-norm</property>
					<value>0.03</value>
				</greater-than>
			</condition>
			<position>
				<x>-1.2</x>
				<y>0.0</y>
				<z>1</z>
			</position>
			<reference-dist>3</reference-dist>
			<max-dist>10</max-dist>
		</airbrake-open>
		
		<airbrake-open>
			<name>airbrake-open</name>
			<mode>once</mode>
			<path>Aircraft/ASK21/Sounds/airbrake-open.wav</path>
			<condition>
				<greater-than>
					<property>/surface-positions/speedbrake-pos-norm</property>
					<value>0.06</value>
				</greater-than>
			</condition>
			<position>
				<x>-1.2</x>
				<y>0.0</y>
				<z>1</z>
			</position>
			<reference-dist>3</reference-dist>
			<max-dist>10</max-dist>
		</airbrake-open>
		
		<airbrake-close>
			<name>airbrake-lock</name>
			<mode>once</mode>
			<path>Aircraft/ASK21/Sounds/airbrake-lock.wav</path>
			<condition>
				<less-than>
					<property>/surface-positions/speedbrake-pos-norm</property>
					<value>0.04</value>
				</less-than>
			</condition>
			<position>
				<x>-1.2</x>
				<y>0.0</y>
				<z>1</z>
			</position>
			<reference-dist>3</reference-dist>
			<max-dist>10</max-dist>
		</airbrake-close>
		
		<!--ILEC SC7 electric vario based on http://www.ilec-gmbh.com/ilec/manuals/SC7_Handbuch_d_2014.pdf-->
		<variometer-up>
			<name>variometer-up</name>
			<mode>looped</mode>
			<path>Aircraft/ASK21/Sounds/vario.wav</path>
			<condition>
				<and>
					<greater-than>
						<property>/instrumentation/ilec-sc7/te-reading-mps</property>
						<value>0.01</value>
					</greater-than>
					<greater-than-equals>
						<property>/systems/electrical/outputs/ilec-sc7</property>
						<value>9</value>
					</greater-than-equals>
					<greater-than>
						<property>/instrumentation/ilec-sc7/audio</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<pitch>
				<property>/instrumentation/ilec-sc7/sound-pitch</property>
				<offset>0</offset>
			</pitch>
			<volume>
				<property>/instrumentation/ilec-sc7/volume</property>
				<factor>1</factor>
				<max>1</max>
			</volume>
			<position>
				<x>-3.35</x>
				<y>0</y>
				<z>0.7</z>
			</position>
			<reference-dist>0.5</reference-dist>
			<max-dist>2.0</max-dist>
		</variometer-up>
		
		<variometer-down>
			<name>variometer-down</name>
			<mode>looped</mode>
			<path>Aircraft/ASK21/Sounds/vario2.wav</path>
			<condition>
				<and>
					<greater-than>
						<property>/instrumentation/ilec-sc7/te-reading-mps</property>
						<value>-10.00</value>
					</greater-than>
					<and>
						<less-than>
							<property>/instrumentation/ilec-sc7/te-reading-mps</property>
							<value>-0.01</value>
						</less-than>
					</and>
					<equals>
						<property>/instrumentation/ilec-sc7/audio</property>
						<value>2</value>
					</equals>
					<greater-than-equals>
						<property>/systems/electrical/outputs/ilec-sc7</property>
						<value>9</value>
					</greater-than-equals>
				</and>
			</condition>
			<pitch>
				<property>/instrumentation/ilec-sc7/sound-pitch</property>
				<offset>0</offset>
			</pitch>
			<volume>
				<property>/instrumentation/ilec-sc7/volume</property>
				<factor>1</factor>
				<max>1</max>
			</volume>
			<position>
				<x>-3.35</x>
				<y>0</y>
				<z>0.7</z>
			</position>
			<reference-dist>0.5</reference-dist>
			<max-dist>2.0</max-dist>
		</variometer-down>
		
		<winch_tow>
			<name>winch_tow</name>
			<mode>looped</mode>
			<path>Aircraft/ASK21/Sounds/winch_tow.wav</path>
			<condition>
				<and>
					<not>
						<property>sim/hitches/winch/open</property>
					</not>
					<greater-than>
						<property>velocities/airspeed-kt</property>
						<value>2</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>velocities/airspeed-kt</property>
				<factor>0.01</factor>
				<max>1</max>
			</volume>
		</winch_tow>
		
		<whistle>
			<name>low-speed-howl</name>
			<mode>looped</mode>
			<path>Aircraft/ASK21/Sounds/howl.wav</path>
			<condition>
				<and>
					<greater-than>
						<property>orientation/alpha-deg</property>
						<value>0.8</value>
					</greater-than>
					<less-than>
						<property>orientation/alpha-deg</property>
						<value>4</value>
					</less-than>
					<greater-than>
						<property>velocities/airspeed-kt</property>
						<value>35</value>
					</greater-than>
					<less-than>
						<property>velocities/airspeed-kt</property>
						<value>55</value>
					</less-than>
				</and>
			</condition>
			<pitch>
				<property>velocities/airspeed-kt</property>
				<factor>0.002</factor>
				<offset>1</offset>
			</pitch>
			<volume>
				<property>orientation/alpha-deg</property>
				<factor>0.02</factor>
				<offset>-0.02</offset>
				<max>0.1</max>
			</volume>
		</whistle>
		
		<whoosh-positive>
			<name>whoosh-positive</name>
