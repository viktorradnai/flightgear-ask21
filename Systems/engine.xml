<?xml version="1.0"?>
<PropertyList>
	
	<filter>
		<debug>false</debug>
		<type>gain</type>
		<input>
			<condition>
				<equals>
					<property>/sim/flight-model</property>
					<value>jsb</value>
				</equals>
			</condition>					
			<property>/engines/engine/rpm</property>
		</input>
		<input>
			<condition>
				<equals>
					<property>/sim/flight-model</property>
					<value>yasim</value>
				</equals>
			</condition>
			<expression>
				<product>
					<property>/engines/engine/rpm</property>
					<value>2.68</value>
				</product>
			</expression>
		</input>
		<gain>1</gain>
		<output>/engines/engine/engine-rpm</output>
	</filter>
	
	<filter>
		<type>gain</type>
		<input>
			<condition>
				<equals>
					<property>/engines/engine/prop-pos-norm</property>
					<value>1.0</value>
				</equals>
			</condition>
			<property>/engines/engine/engine-rpm</property>
		</input>
		<input>0.0</input>
		<gain>1.0</gain>
		<output>/engines/engine/engine-rpm-checked</output>
	</filter>
	
	<!--	ILEC Instrument Property Rules	-->
	<filter>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<condition>
				<greater-than-equals>
					<property>/systems/electrical/outputs/ilec</property>
					<value>9</value>
				</greater-than-equals>
			</condition>
			<value>1</value>
		</input>
		<input>0</input>
		<output>/instrumentation/ilec/powered</output>
	</filter>
	<filter>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<condition>
				<greater-than-equals>
					<property>/engines/engine/engine-rpm-checked</property>
					<value>7800</value>
				</greater-than-equals>
			</condition>
			<value>1</value>
		</input>
		<input>0</input>
		<output>/instrumentation/ilec/rpm-flashing/enabled</output>
	</filter>
	<!--	Display Digits	-->
	<filter>
		<type>gain</type>
		<input>
			<condition>
				<equals>
					<property>/instrumentation/ilec/selftest</property>
					<value>1</value>
				</equals>
			</condition>
			<value>1</value>
		</input>
		<input>0</input>
		<output>/instrumentation/ilec/selftest-active</output>
	</filter>
	<filter>
		<type>gain</type>
		<input>
			<condition>
				<property>/instrumentation/ilec/selftest-active</property>
			</condition>
			<value>8</value>
		</input>
		<input>
			<expression>
				<floor>
					<div>
						<property>/engines/engine/engine-rpm-checked</property>
						<value>1000</value>
					</div>
				</floor>
			</expression>
		</input>
		<output>/instrumentation/ilec/digit[0]</output>
	</filter>
	<filter>
		<type>gain</type>
		<input>
			<condition>
				<property>/instrumentation/ilec/selftest-active</property>
			</condition>
			<value>8</value>
		</input>
		<input>
			<expression>
				<floor>
					<div>
						<property>/engines/engine/engine-rpm-checked</property>
						<value>100</value>
					</div>
				</floor>
			</expression>
		</input>
		<output>/instrumentation/ilec/digit[1]</output>
	</filter>
	<filter>
		<type>gain</type>
		<input>
			<condition>
				<property>/instrumentation/ilec/selftest-active</property>
			</condition>
			<value>8</value>
		</input>
		<input>0</input>
		<output>/instrumentation/ilec/digit[2]</output>
	</filter>
	<filter>
		<type>gain</type>
		<input>
			<condition>
				<property>/instrumentation/ilec/selftest-active</property>
			</condition>
			<value>8</value>
		</input>
		<input>0</input>
		<output>/instrumentation/ilec/digit[3]</output>
	</filter>
	<filter>
		<type>gain</type>
		<input>
			<condition>
				<property>/instrumentation/ilec/selftest-active</property>
			</condition>
			<value>8</value>
		</input>
		<input>0</input>
		<output>/instrumentation/ilec/digit[4]</output>
	</filter>
	<filter>
		<type>gain</type>
		<input>
			<condition>
				<property>/instrumentation/ilec/selftest-active</property>
			</condition>
			<value>8</value>
		</input>
		<input>0</input>
		<output>/instrumentation/ilec/digit[5]</output>
	</filter>
	<filter>
		<type>gain</type>
		<input>
			<condition>
				<property>/instrumentation/ilec/selftest-active</property>
			</condition>
			<value>8</value>
		</input>
		<input>
			<expression>
				<floor>
					<product>
						<property>/consumables/fuel/tank/level-m3</property>
						<value>100</value>
					</product>
				</floor>
			</expression>
		</input>
		<output>/instrumentation/ilec/digit[6]</output>
	</filter>
	<filter>
		<type>gain</type>
		<input>
			<condition>
				<property>/instrumentation/ilec/selftest-active</property>
			</condition>
			<value>8</value>
		</input>
		<input>
			<expression>
				<floor>
					<product>
						<property>/consumables/fuel/tank/level-m3</property>
						<value>1000</value>
					</product>
				</floor>
			</expression>
		</input>
		<output>/instrumentation/ilec/digit[7]</output>
	</filter>
	
</PropertyList>
