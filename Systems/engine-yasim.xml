<?xml version="1.0"?>
<PropertyList>
	
	<filter>
		<debug>false</debug>
		<type>gain</type>
		<input>					
			<property>/controls/engines/engine[0]/ignition</property>
		</input>
		<gain>3.0</gain>
		<output>/controls/engines/engine[0]/magnetos</output>
	</filter>
	
	<filter>
		<type>gain</type>
		<input>
			<condition>
				<greater-than-equals>
					<property>/systems/electrical/outputs/starter</property>
					<value>9.0</value>
				</greater-than-equals>
			</condition>
			<value>1.0</value>
		</input>
		<input>0.0</input>
		<gain>1.0</gain>
		<output>/controls/engines/engine[0]/starter-yasim</output>
	</filter>
	
</PropertyList>
